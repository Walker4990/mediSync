<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mediSync.project.mapper.DoctorMapper">

    <!-- 의사 목록 조회 -->
    <select id="allDoctor" resultType="doctor">
        SELECT * FROM doctor
    </select>

    <!-- 의사 정보 등록 -->
    <insert id="addDoctor" parameterType="doctor" useGeneratedKeys="true" keyProperty="doctorId">
        INSERT INTO doctor
        (doctor_name, department, license_no, phone)
        VALUES
        (#{doctorName}, #{department}, #{licenseNo}, #{phone})
    </insert>

    <!-- 의사 정보 수정 -->
    <update id="editDoctor" parameterType="doctor">
        UPDATE doctor SET doctor_name= #{doctorName}, department= #{department}, phone= #{phone}
        WHERE doctor_id= #{doctorId}
    </update>

    <!-- 의사 정보 삭제 -->
    <delete id="delDoctor" parameterType="int">
        DELETE from doctor WHERE doctor_id= #{doctorId}
    </delete>

</mapper>
