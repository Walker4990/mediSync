<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mediSync.project.notification.mapper.NotificationMapper">

    <select id="getNotificationSetting" parameterType="long" resultType="notiset">
        select * from notification_setting
        where patient_id = #{patientId}
    </select>


    <!-- 회원가입시 알림 설정 생성 -->
    <insert id="insertNotificationSetting" parameterType="long">
        insert into notification_setting(patient_id, email_enabled, push_enabled,marketing_enabled)
        value(#{patientId},1,1,1)
    </insert>

    <update id="updateSetEnabled" parameterType="map">
        update notification_setting
        <set>
            <if test="key == 'email'">
                email_enabled = #{value},
            </if>
            <if test="key == 'push'">
                push_enabled = #{value},
            </if>
            <if test="key == 'marketing'">
                marketing_enabled = #{value},
            </if>
        </set>
        WHERE patient_id = #{patientId}

    </update>

</mapper>
