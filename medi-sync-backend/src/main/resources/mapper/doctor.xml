<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mediSync.project.mapper.DoctorMapper">

    <!--  의사 등록  -->
    <insert id="insertDoctor" parameterType="doctor">
        INSERT INTO doctor (doctor_name, department, license_no, phone, created_at)
        VALUES (#{doctorName}, #{department}, #{licenseNo}, #{phone}, now())
    </insert>
    <!--  의사 조회  -->
    <select id="doctorSelectAll" resultType="doctor">
        SELECT * FROM doctor
    </select>
    <!--  의사 검색(의사)  -->
    <select id="selectRecordAllById" parameterType="long" resultType="doctor">
        SELECT * FROM doctor WHERE doctor_id = #{doctorId}
    </select>
</mapper>
