<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mediSync.project.patient.mapper.AccountMapper">

    <resultMap id="accountResultMap" type="com.mediSync.project.dto.AccountDTO">
        <id property="adminId" column="admin_id" />
        <result property="empId" column="emp_id" />
        <result property="password" column="password" />
        <result property="name" column="name" />
        <result property="phone" column="phone" />
        <result property="email" column="email" />
        <result property="role" column="role" />
        <result property="profileImgUrl" column="profile_img_url" />
        <result property="doctorId" column="doctor_id" />
        <result property="staffId" column="staff_id" />
        <result property="createdAt" column="created_at" />
        <result property="loginId" column="login_id" />
        <result property="provider" column="provider" />
        <result property="providerId" column="provider_id" />
    </resultMap>

    <!-- 계정 등록 -->
    <insert id="insertAdmin" parameterType="com.mediSync.project.dto.AccountDTO">
        INSERT INTO admin_account (
        emp_id, password, name, phone, email, role, profile_img_url, doctor_id, staff_id, created_at
        ) VALUES (
        #{empId}, #{password}, #{name}, #{phone}, #{email}, #{role}, #{profileImgUrl}, #{doctorId}, #{staffId}, NOW())
    </insert>

    <!-- 전체 계정 목록 조회 -->
    <select id="selectAllAdmin" resultMap="accountResultMap">
        SELECT * FROM admin_account
    </select>

    <!-- 계정 선택 조회 -->
    <select id="selectAdminById" parameterType="Long" resultMap="accountResultMap">
        SELECT * FROM admin_account WHERE admin_id = #{adminId}
    </select>

    <!-- 계정 정보 수정 -->
    <update id="updateAdmin" parameterType="com.mediSync.project.dto.AccountDTO">
        UPDATE admin_account
        SET name = #{name}, phone = #{phone}, email = #{email}, role = #{role},
        profile_img_url = #{profileImgUrl}, doctor_id = #{doctorId}, staff_id = #{staffId}
        <if test="password != null and password != ''">
           , password = #{password}
        </if>
        WHERE admin_id = #{adminId}
    </update>

    <!-- 계정 삭제 -->
    <delete id="deleteAdmin" parameterType="Long">
        DELETE FROM admin_account
        WHERE admin_id = #{adminId}
    </delete>

</mapper>
